
<h1>Search for Users</h1>

<%= form_for :search_users, url: search_users_path, method: :get do |form| %>
  <%= form.text_field :query, value: params[:search_users].presence && params[:search_users][:query] %>
  <%= form.submit 'Search' %>
<% end %>

<% unless @users.nil? %>
  <% if @users.empty? %>
    <h2>No users found matching your query.</h2>
  <% else %>
    <h2>Search results</h2>

    <table style="width: 100%;">
      <thead>
      <tr>
        <th>Email</th>
        <th>Name</th>
      </tr>
      </thead>

      <tbody>
      <% @users.each do |post| %>
        <tr>
          <td><%= post.email %></td>
          <td><%= post.user_name %></td>
        </tr>
      <% end %>
      <tbody>
      </table>
  <% end %>
<% end %>