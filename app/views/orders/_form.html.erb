<%= form_for(@order) do |f| %>

  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="exampleFormControlInput1">Layer Count</label>
      <div class="row">
        <div class="col-sm-8 col-sm-offset-2">
          <%= f.collection_select :layer_id, Layer.all, :id, :layercount%>
        </div>
      </div>
    </div>

    <div class="form-group col-md-6">
      <label for="exampleFormControlInput1">PCB Price</label>
      <div class="row">
        <div class="col-sm-8 col-sm-offset-2">
          <%= f.text_field :pcb_price , readonly: true %>
        </div>
      </div>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="exampleFormControlInput1">Layer Thickness</label>
      <div class="row">
        <div class="col-sm-8 col-sm-offset-2">
          <%= f.collection_select :layerthickness_id, Layerthickness.where(layer_id: :layer_id), :id, :thickness %>
        </div>
      </div>
    </div>
    <div class="form-group col-md-6">
      <label for="exampleFormControlInput1">Shipment Charge</label>
      <div class="row">
        <div class="col-sm-8 col-sm-offset-2">
          <%= f.text_field :shipment_charge , readonly: true %>
        </div>
      </div>
    </div>
  </div>

  <div class="form-row">
  <div class="form-group col-md-6">
    <label for="exampleFormControlInput1">Board size X</label>
    <div class="row">
      <div class="col-sm-8 col-sm-offset-2">
        <%= f.number_field :board_size_x %>
      </div>
    </div>
  </div>
  <div class="form-group col-md-6">
    <label for="exampleFormControlInput1">Tax</label>
    <div class="row">
      <div class="col-sm-8 col-sm-offset-2">
        <%= f.text_field :tax , readonly: true %>
      </div>
    </div>
  </div>
  </div>

  <div class="form-row">
  <div class="form-group col-md-6">
    <label for="exampleFormControlInput1">Board size Y</label>
    <div class="row">
      <div class="col-sm-8 col-sm-offset-2">
        <%= f.number_field :board_size_y %>
      </div>
    </div>
  </div>
  <div class="form-group col-md-6">
    <label for="exampleFormControlInput1">Total Price</label>
    <div class="row">
      <div class="col-sm-8 col-sm-offset-2">
        <%= f.text_field :total_price , readonly: true %>
      </div>
    </div>
  </div>
  </div>

  <div class="form-row">
  <div class="form-group col-md-6">
    <label for="exampleFormControlInput1">Quantity</label>
    <div class="row">
      <div class="col-sm-8 col-sm-offset-2">
        <%= f.number_field :quantity %>
      </div>
    </div>
  </div>
  <div class="form-group col-md-6">
    <label for="exampleFormControlInput1">Status</label>
    <div class="row">
      <div class="col-sm-8 col-sm-offset-2">
        <%= f.text_field :status , readonly: true %>
      </div>
    </div>
  </div>
  </div>
  <div class="btn btn-default">
    <%= f.submit %>
  </div>
<% end %>

<script type="application/javascript">
$('select#order_layerthickness_id').html('<%= j options_from_collection_for_select(@filtered_thicknesses, :id, :thickness) %>');
</script>

